VPATH=%VPATH%

RUSTC ?= rustc
RUSTFLAGS ?=

RUST_SRC = $(shell find $(VPATH)/src -type f -name '*.rs')

.PHONY: all
all: libcocoa.dummy

libcocoa.dummy: src/lib.rs $(RUST_SRC)
	$(RUSTC) $(RUSTFLAGS) $< --out-dir .
	touch $@

cocoa-test: src/lib.rs $(RUST_SRC)
	$(RUSTC) $(RUSTFLAGS) $< -o $@ --test

check: cocoa-test
	./cocoa-test

.PHONY: clean
clean:
	rm -f cocoa-test *.a *.o *.so *.dylib *.dll *.dummy
